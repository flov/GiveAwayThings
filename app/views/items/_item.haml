-form_for item do |f|
  = f.error_messages
  .in_field_label
    %label{:for=>'item_title'} type in item
    = f.text_field :title, :size => 36
    = image_submit_tag "giveawaybutton.png", :class => 'giveaway_submit'
    .hide_me#item_description_fields
      .in_field_label
        %label{:for=>'item_description'} describe item
      = f.text_area :description, :rows => 15, :cols=>48
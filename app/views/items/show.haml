- title " - #{@item.title}"
%h1=@item.title
%p
  %strong Owner:
  =h @item.person.username

%p
  %strong= "Description: #{h @item.description}" unless @item.description.empty?
  
= image_tag @item.photo.url unless @item.photo.url == "/photos/original/missing.png"

%h2=t('.send_request', :username => @item.person.username)
#send_request
  -form_for @request do |f|
    =f.error_messages
    =request_fields(f)
    =f.submit "send request"

%p
  = link_to "View All", items_path
  
-content_for :sidebar do
  = render :partial => 'items/avatar', :locals => {:person => @person}
  = render :partial => 'items/statistics', :locals => {:person => @item.person}
  = render :partial => 'people/references', :locals => {:person => @person}
  
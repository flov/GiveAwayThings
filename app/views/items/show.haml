- title " - #{@item.title}"
%h2=textilize(word_wrap(@item.title, 40))
%p
  %strong=t('.owner')
  =link_to(h(@item.person.username), "/people/#{@item.person.username}")

%p
  %strong=t('.description')
  %br/
  =textilize h(@item.description) unless @item.description.empty?
  
= image_tag @item.photo.url unless @item.photo.url.include? "missing.png"

%h2=t('.send_request', :username => @item.person.username)
#send_request
  -form_for @request do |f|
    =request_fields(f, @item)
    =f.submit "send request"

%p
  = link_to t('.view_all'), items_path
  
-content_for :sidebar do
  = render :partial => 'items/avatar', :locals => {:person => @person}
  = render :partial => 'items/statistics', :locals => {:person => @item.person}
  = render :partial => 'people/references', :locals => {:person => @person}
  
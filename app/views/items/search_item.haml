%table
  %tr
    %th Title
    %th Country
    %th City
    %th Since
    %th By
  -@items.each do |item|
    %tr
      %td=item.title
      %td=item.address.city.country
      %td=item.address.city
      %td=item.person
      %td=time_ago_in_words item.created_at


!!! Strict
%html{html_attrs}
  %head
    %title
      = h("GiveAwayThings #{yield :title}")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.3.2.min','jquery.tablesorter.min.js','jquery.tipsy', 'jquery.elastic' ,'application', 'init'
    = yield(:head)
    = ie_sensitivity
  %body
    #container
      #header
        .header_content
          #logo= link_to image_tag('logo.png'),'/'
          =render :partial => 'shared/avatar_header' if logged_in?
          =render :partial => 'shared/login_box' unless logged_in?

      #content
        #nav.rounded_corners
          = render :partial => 'layouts/navigation' 
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        #content_wrapper
          .rounded_corners.float_left.content_menu
            .main.float_left
              = yield
            -if @content_for_sidebar_in_box
              .float_right.sidebar_in_box
                =yield :sidebar_in_box
              .clear
            
          -if @content_for_sidebar
            .float_left.rounded_corners.sidebar
              = yield :sidebar

          .clear
      #footer
        = render :partial => 'shared/footer'
    = javascripts
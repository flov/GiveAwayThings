!!! Strict
%html{html_attrs}
  %head
    %title
      = h("GiveAwayThings #{yield :title}")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = yield(:head)
  
  %body

    #container
      #header
        #logo= link_to image_tag('logo.png'),'/'
        #nav_user
          %a#nav_user_messages{:href=>"/inbox"}
            %span 0 new
          %a#nav_user_logout=link_to
          %a#nav_user_avatar{:href=>""}
            = image_tag "avatar_kirk.png", :width=>36, :height => 36


      #content
        .middle_background
          .middle
            .body
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
              - if show_title?
                %h1=h yield(:title)

              = yield
      #footer
        &copy GiveAwayThings
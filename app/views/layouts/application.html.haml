!!! Strict
%html{html_attrs}
  %head
    %title
      = h("GiveAwayThings #{yield :title}")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery.infieldlabel.min'
    = javascript_include_tag 'application'
    = yield(:head)
    = ie_sensitivity

  %body

    #container
      #header
        #logo= link_to image_tag('logo.png'),'/'
        #nav_user
          %a#nav_user_messages{:href=>"/inbox"} 0 new
          = link_to 'logout', logout_path, :id => "nav_user_logout"
          = link_to image_tag("avatar_kirk.png", :width=>36, :height => 36),welcome_path,:id => 'nav_user_avatar'


      #content
        .middle_background
          .middle
            .body
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
              = yield
      = footer
    = javascripts
!!! Strict
%html{html_attrs}
  %head
    %title
      = h("GiveAwayThings #{yield :title}")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery.infieldlabel.min', 'jquery.tablesorter.min.js'
    = javascript_include_tag 'application'
    = yield(:head)
    = ie_sensitivity

  %body

    #container
      #header
        #logo= link_to image_tag('logo.png'),'/'
        =render :partial => 'shared/avatar_header' if logged_in?
        =render :partial => 'shared/login_box' unless logged_in?


      #content
        .middle_background
          .middle
            .body
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"
              = yield
      = footer
    = javascripts
.requests
  %table
    - for undecided_request in undecided_requests
      %tr
        %td.gravatar= link_to gravatar_for(undecided_request.requester, :size=>30), person_path(undecided_request.requester.to_param)
        %td 
          .name= link_to h(undecided_request.requester.username), person_path(undecided_request.requester.to_param)
        %td wants to have
        %td.for= link_to undecided_request.item.title, item_path(undecided_request.item.to_param)
        %td from
        %td 
          .name= link_to 'you', person_path(current_person)
        / %td.sent.center= undecided_request.created_at.strftime("%d/%m/%Y<br/>%k:%M") 
        %td= accept_decline(undecided_request)


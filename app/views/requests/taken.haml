.width450
  %h1= t('.mark_as_taken')
  .float_left
    %p
      =textilize_without_paragraph(t('.text1'))
      %br/
      =textilize_without_paragraph(t('.text2'))
      %br/
      =textilize_without_paragraph(t('.text3'))

  .clear
  
  %h2= t('requests.taken.leave_reference', :username => @request.requester.username.capitalize)
  = render :partial => 'requests/leave_reference', :locals => {:to => @request.owner, :item => @request.item, :reference => @reference, :taken_by => current_person.id}

  - content_for :sidebar_in_box do
    = render :partial => 'items/statistics', :locals => {:person => current_person}
    .height100
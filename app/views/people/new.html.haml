- title "Sign up"

%h1 Sign Up
%p== Already have an account? #{link_to "Log in", login_path}.

- form_for @person do |f|
  = f.error_messages
  %table.form
    %tr
      %th
        Username
        %p.details 4-15 letters and numbers
      %td
        = f.text_field :username
    %tr
      %th
        Email
        %p.details We won't share, sell, or spam
      %td
        = f.text_field :email
    %tr
      %th
        Password
        %p.details At least 5 characters
      %td= f.password_field :password
    %tr
      %th
        Confirm it
        %p.details Type your password again
      %td= f.password_field :password_confirmation
    - f.fields_for :address do |address_form|
      = render :partial => 'city_form', :locals => {:address_form => address_form}
      %tr
        %th
          Street
          %p.details Will not be displayed publicly
        %td= address_form.text_field :street
  %p
    .submit.center= f.submit "Sign up"

=# render :partial => 'country', :locals => {:address_form => address_form}

.center.intro
  =# render :partial => 'not_ready'
  %h1 
    GiveAwayThings
    %span.subtitle generating sustainability

  .searchbox
    %h2 Find Something Near You
    = render :partial => "items/search"
  .searchbox
    %h2 Give Something Away
    = render :partial => 'items/give_away', :locals => {:item => @item}

  - if logged_in?
    %h2= "You are logged in as #{current_person.name}"
    -if current_person.facebook_user?
      ="<fb:profile-pic uid='#{current_person.fb_user_id}' facebook-logo='true' size='thumb'></fb:profile-pic>"
      :plain
        <p><a href="#" onclick='FB.Connect.logoutAndRedirect("/logout")'>Logout</a></p>
    -else 
      %p why don't you connect with your facebook account
      = fb_login_button('window.location = "/people/link_user_accounts";')
      = "<p>#{link_to 'Logout', logout_path}</p>"
  - else 
    %h2 You are not logged in!
    %p="#{link_to 'Signup', signup_path} or #{link_to 'Login', login_path}"


    
  -content_for :sidebar do
    = render :partial => 'items/statistics', :locals => {:person => Person.new}




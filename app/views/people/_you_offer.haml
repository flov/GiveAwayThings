%h2 You Offer:
#you_offer
  %table.tablesorter
    %tbody
    =@items_offered.each do |item|
      %tr
        %td=link_to item.title, item_path(item)
        %td since
        %td=time_ago_in_words(item.created_at)
    .already_accepted
      =@items_offered_and_accepted.each do |item|
        %tr
          %td=link_to item.title, item_path(item)
          %td since
          %td=time_ago_in_words(item.created_at)
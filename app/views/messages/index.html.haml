- title "Inbox from #{current_person.username}"

%strong You have
%br/
%strong
  =pluralize(@unread_messages.count, 'unread Message')
  =pluralize(@undecided_requests.count, 'undecided Request') unless @undecided_requests == 0 


%h2 Undecided Requests:
.messages
  %table
    %tr
      %th{:colspan => 2} From
      %th.for for
      %th.sent Sent
      %th.accept 
      %th.decline
    - for undecided_request in @undecided_requests
      %tr
        %td.first= link_to gravatar_for(undecided_request.requester, :size=>28), person_path(undecided_request.requester.to_param)
        %td.from= link_to h(undecided_request.requester.username), person_path(undecided_request.requester.to_param)
        %td.for= link_to undecided_request.item.title, item_path(undecided_request.item.to_param)
        %td.sent.center= undecided_request.created_at.strftime("%d/%m/%Y<br/>%k:%M") 
        %td.accept.center= link_to 'Accept', accept_request_path(undecided_request) 
        %td.decline.center= link_to 'Decline', decline_request_path(undecided_request) 




%h2 Messages:  
.messages
  %table
    %tr
      %th{:colspan => 2} From
      %th.subject Subject
      %th.sent Sent
      %th.replied Replied?
      %th.accept
      %th.delete
    - for message in @messages
      %tr
        %td.first= link_to gravatar_for(message.author, :size=>28), person_path(message.author.username)
        %td.from= link_to h(message.author.username), person_path(message.author.username)
        %td.subject= subject(message)
        %td.sent.center= message.created_at.strftime("%d/%m/%Y<br/>%k:%M") 
        %td.replied.center= reply_message(message)
        %td.accept.center
          = accept_request_link(message)
        %td.delete= link_to 'Delete', message, :confirm => 'Are you sure?', :method => :delete

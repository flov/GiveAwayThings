- title "Inbox from #{current_person.username}"

%h2 Messages:
%p 
  %strong You have
  %br/
  %strong
    ="#{pluralize(current_person.unreplied_requests.size, 'unreplied Request')} and"
    =pluralize(current_person.unread_messages.size, 'unread Message')
  
.messages
  %table
    %tr
      %th{:colspan => 2} From
      %th Subject
      %th Sent
      %th Replied?
      %th
    - for message in @messages
      %tr
        %td.first= link_to gravatar_for(message.author, :size=>28), person_path(message.author.username)
        %td.from= link_to h(message.author.username), person_path(message.author.username)
        %td.subject= message_title(message)
        %td.sent.center= message.created_at.strftime("%d/%m/%Y<br/>%k:%M") 
        %td.replied.center= reply_message(message)
        %td= link_to 'Delete', message, :confirm => 'Are you sure?', :method => :delete